<div>
  <%= flash[:notice] %>
</div>

<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
  <% if @user == current_user %>
     <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>   
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
    <div>
      <%= link_to user_path(book.user.id) do %>
         <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>  
      <p>Title :
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %> 
      </p>    
      <p>Opinion: <%= book.body %></p>
    </div>
<% end %>

