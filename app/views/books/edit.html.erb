<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
          <label for="inputTitle">Title</label>
          </br><%= f.text_field :title, autofocus: true, id:"inpuTtitle"%> 
          </br><label for="inputBody">Opinion</label>
          </br><%= f.text_area :body, id: "inputBody"%>  
          </br><%= f.submit "Update Book", class: "btn btn-sm btn-success" %>
          </br><%= link_to "Show", book_path(@book.id) %>
          <%= link_to "Back", books_path %>
      <% end %> 
    </div>
  </div>
</div>         