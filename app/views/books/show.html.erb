<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<div>
  <%= image_tag 'sample-author1.jpg' %>
  <%= @book.title %>
  <%= @book.body %>
</div>
